{
  "extends": "standard",
  "plugins": [
    "import",
    "node",
    "promise"
  ],
  "env": {
    "browser": false,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "ignorePatterns": ["node_modules/", "dist/"],
  "rules": {
    "semi": "error",
    "no-console": "off",
    "quotes": ["error", "single"],
    "indent": ["error", 2]
  }
}
